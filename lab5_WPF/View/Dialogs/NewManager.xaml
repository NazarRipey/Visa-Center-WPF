<Window x:Class="lab5_WPF.View.Dialogs.NewManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab5_WPF.View.Dialogs"
        mc:Ignorable="d"
        Title="NewManager" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="60"/>
            <RowDefinition MinHeight="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock>Manager name:</TextBlock>
            <TextBox Name="ManagerName" MinWidth="250"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock>Manager rating:</TextBlock>
            <TextBox Name="ManagerRating" MinWidth="250"></TextBox>
        </StackPanel>

        <Button Grid.Row="2" Height="25" Content="Add" Width="80" Click="Button_Click"/>
    </Grid>
</Window>
